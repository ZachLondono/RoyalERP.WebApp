@page "/newcompany"
@using RoyalERP.WebApp.Shared.API.Companies
@inject ICompanyAPI companyAPI;

<div class="container">

    <div class="row">

        <div class="col-2 align-items-center d-flex">
            <RadzenLabel Text="Name"/>
        </div>
        <div class="col">
            <RadzenTextBox Placeholder="New Company" @bind-value=Name></RadzenTextBox>
        </div>

    </div>
    
    <div class="row justify-content-center">

        <RadzenButton ButtonStyle="ButtonStyle.Primary" Style="width: 100px;">Create</RadzenButton>

    </div>

</div>

@code {

    private string Name;

}
